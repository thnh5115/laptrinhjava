# ==============================================
# Backend Environment Variables
# ==============================================
# Copy this file to .env and update values as needed

# --------------------------------------------
# CORS Configuration
# --------------------------------------------
# Frontend origin for CORS (must match your frontend URL exactly)
# Development: http://localhost:3001 (Next.js default)
# Production: https://your-production-domain.com
FRONTEND_ORIGIN=http://localhost:3001

# --------------------------------------------
# Database Configuration
# --------------------------------------------
# PostgreSQL connection settings
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/carbon_credit_marketplace
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=your_password_here

# --------------------------------------------
# JWT Configuration
# --------------------------------------------
# JWT secret key (minimum 32 characters, use strong random string in production)
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters
# JWT expiration time (in milliseconds)
# 86400000 = 24 hours
JWT_EXPIRATION=86400000

# --------------------------------------------
# Application Configuration
# --------------------------------------------
# Server port (default: 8080)
SERVER_PORT=8080

# Active Spring profile (dev, prod, test)
SPRING_PROFILES_ACTIVE=dev

# --------------------------------------------
# Security Configuration
# --------------------------------------------
# Rate limiting (requests per minute for auth endpoints)
RATE_LIMIT_AUTH=5

# --------------------------------------------
# Logging Configuration
# --------------------------------------------
# Log level (DEBUG, INFO, WARN, ERROR)
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_CCM=DEBUG
