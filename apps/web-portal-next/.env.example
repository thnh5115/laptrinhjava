# ==============================================
# Frontend Environment Variables (Next.js)
# ==============================================
# Copy this file to .env.local and update values as needed

# --------------------------------------------
# API Configuration
# --------------------------------------------
# Mode A (host): localhost ports
NEXT_PUBLIC_API_URL=http://localhost:8080/api
NEXT_PUBLIC_ADMIN_API_URL=http://localhost:8080/api
NEXT_PUBLIC_BUYER_API_URL=http://localhost:8081/api
NEXT_PUBLIC_OWNER_API_URL=http://localhost:8082/api/owner
NEXT_PUBLIC_CVA_API_URL=http://localhost:8083/api/cva

# Mode B (Docker): service hostnames
# NEXT_PUBLIC_API_URL=http://admin-backend:8080/api
# NEXT_PUBLIC_ADMIN_API_URL=http://admin-backend:8080/api
# NEXT_PUBLIC_BUYER_API_URL=http://buyer-backend:8081/api
# NEXT_PUBLIC_OWNER_API_URL=http://owner-backend:8082/api/owner
# NEXT_PUBLIC_CVA_API_URL=http://cva-backend:8083/api/cva

# --------------------------------------------
# Application Configuration
# --------------------------------------------
# Next.js dev server port (default: 3000, but we use 3001)
PORT=3001

# Node environment (development, production, test)
NODE_ENV=development

# --------------------------------------------
# Optional: Feature Flags
# --------------------------------------------
# Enable debug mode (shows detailed error messages)
NEXT_PUBLIC_DEBUG_MODE=true

# Enable mock data mode (for testing without backend)
NEXT_PUBLIC_MOCK_MODE=false
