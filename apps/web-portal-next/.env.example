# ==============================================
# Frontend Environment Variables (Next.js)
# ==============================================
# Copy this file to .env.local and update values as needed

# --------------------------------------------
# API Configuration
# --------------------------------------------
# Admin backend API base URL (must include /api suffix)
# Development: http://localhost:8080/api
# Production: https://api.your-domain.com/api
NEXT_PUBLIC_API_URL=http://localhost:8080/api

# CVA module API base URL and auth token
# By default points to local CVA backend (Basic auth for dev user cva_officer/password123)
NEXT_PUBLIC_CVA_API_URL=http://localhost:8082
NEXT_PUBLIC_CVA_BASIC_TOKEN=Basic Y3ZhX29mZmljZXI6cGFzc3dvcmQxMjM=

# --------------------------------------------
# Application Configuration
# --------------------------------------------
# Next.js dev server port (default: 3000)
PORT=3000

# Node environment (development, production, test)
NODE_ENV=development

# --------------------------------------------
# Optional: Feature Flags
# --------------------------------------------
# Enable debug mode (shows detailed error messages)
NEXT_PUBLIC_DEBUG_MODE=true

# Enable mock data mode (for testing without backend)
NEXT_PUBLIC_MOCK_MODE=false
