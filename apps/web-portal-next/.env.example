# ==============================================
# Frontend Environment Variables (Next.js)
# ==============================================
# Copy this file to .env.local and update values as needed

# --------------------------------------------
# API Configuration
# --------------------------------------------
# Backend API base URL (must include /api suffix)
# Development: http://localhost:8080/api
# Production: https://api.your-domain.com/api
NEXT_PUBLIC_API_URL=http://localhost:8080/api

# --------------------------------------------
# Application Configuration
# --------------------------------------------
# Next.js dev server port (default: 3000, but we use 3001)
PORT=3001

# Node environment (development, production, test)
NODE_ENV=development

# --------------------------------------------
# Optional: Feature Flags
# --------------------------------------------
# Enable debug mode (shows detailed error messages)
NEXT_PUBLIC_DEBUG_MODE=true

# Enable mock data mode (for testing without backend)
NEXT_PUBLIC_MOCK_MODE=false
