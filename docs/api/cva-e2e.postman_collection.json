{
  "info": {
    "name": "CVA E2E Flow",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "End-to-end CVA verification flow covering request submission, decisioning, reporting, and analytics. Configure collection variables `baseUrl` (default `http://localhost:8082`) and `authToken` (default Basic for dev)."
  },
  "item": [
    {
      "name": "Create verification request",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "{{authToken}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/cva/requests",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "cva",
            "requests"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"ownerId\": \"11111111-1111-1111-1111-111111111111\",\n  \"tripId\": \"TRIP-POSTMAN-001\",\n  \"distanceKm\": 87.3,\n  \"energyKwh\": 19.6,\n  \"checksum\": \"6a0641f5e9e2720d8fb0e2fe7289a0f81288a17e8122026bf6821a7958f0c245\",\n  \"notes\": \"Postman flow sample\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "if (pm.response.code === 201) {",
              "    var body = pm.response.json();",
              "    if (body && body.id) {",
              "        pm.collectionVariables.set('requestId', body.id);",
              "    }",
              "}",
              "pm.test('Create response is 201', function () {",
              "    pm.response.to.have.status(201);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "List verification requests",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "{{authToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/cva/requests?page=0&size=5",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "cva",
            "requests"
          ],
          "query": [
            {
              "key": "page",
              "value": "0"
            },
            {
              "key": "size",
              "value": "5"
            }
          ]
        }
      }
    },
    {
      "name": "Approve verification request",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "{{authToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-Idempotency-Key",
            "value": "{{idempotencyKey}}",
            "disabled": false
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/cva/requests/{{requestId}}/approve",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "cva",
            "requests",
            "{{requestId}}",
            "approve"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"verifierId\": \"22222222-2222-2222-2222-222222222222\",\n  \"notes\": \"Approved via Postman\"\n}"
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "if (!pm.collectionVariables.get('idempotencyKey')) {",
              "    pm.collectionVariables.set('idempotencyKey', crypto.randomUUID());",
              "}"
            ]
          }
        },
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Approve response is 202', function () {",
              "    pm.response.to.have.status(202);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Reject verification request",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "{{authToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/cva/requests/{{requestId}}/reject",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "cva",
            "requests",
            "{{requestId}}",
            "reject"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"verifierId\": \"22222222-2222-2222-2222-222222222222\",\n  \"reason\": \"Needs supporting documents\"\n}"
        }
      }
    },
    {
      "name": "Download report (JSON)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "{{authToken}}"
          },
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/cva/reports/{{requestId}}?format=json",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "cva",
            "reports",
            "{{requestId}}"
          ],
          "query": [
            {
              "key": "format",
              "value": "json"
            }
          ]
        }
      }
    },
    {
      "name": "Analytics overview",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "{{authToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/cva/analytics/overview?windowDays=30",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "cva",
            "analytics",
            "overview"
          ],
          "query": [
            {
              "key": "windowDays",
              "value": "30"
            }
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8082",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "Basic Y3ZhX29mZmljZXI6cGFzc3dvcmQxMjM=",
      "type": "string"
    },
    {
      "key": "requestId",
      "value": "",
      "type": "string"
    },
    {
      "key": "idempotencyKey",
      "value": "",
      "type": "string"
    }
  ]
}
